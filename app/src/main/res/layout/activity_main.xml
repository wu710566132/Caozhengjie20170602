<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.test.caozhengjie20170602.MainActivity">
      <android.support.v4.view.ViewPager
          android:id="@+id/vp"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="38"
          android:layout_alignParentTop="true"
          android:layout_alignParentStart="true"></android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="0dp"
        android:layout_weight="3.50">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="155dp"
            android:background="@drawable/presence_online"/>

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/presence_invisible"
            android:layout_toRightOf="@+id/dot1"
                android:layout_marginLeft="10dp"
           android:layout_alignBottom="@+id/dot1"
            />
    </RelativeLayout>
</LinearLayout>
